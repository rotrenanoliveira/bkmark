{
  "editor.fontSize": 12,

  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },

  "cSpell.words": [
    "bkmark",
    "bmrks",
    "geist",
    "readmarks",
    "runnote"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}